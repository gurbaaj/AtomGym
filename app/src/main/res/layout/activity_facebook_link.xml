<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_facebook_link"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.javahelps.atomgym.NavigationActivities.FacebookLinkActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fbfbfb"
        android:text="@string/facebook_link_text"
        android:textSize="@dimen/facebooklinktext_size"/>
    
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/button_fb_link"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_facebooklinkbutton"
        android:textColor="@color/colorWhite"
        android:background="@color/color_facebookLinkButton"
        android:text="Connect with Facebook"
        android:layout_height="48dp" />
    

</LinearLayout>
